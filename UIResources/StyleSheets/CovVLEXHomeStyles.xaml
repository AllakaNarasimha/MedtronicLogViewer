<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:VLEXClient">
    <Style x:Key="HmscreenHeaderLabel" TargetType="{x:Type Label}">
        <Setter Property="FontSize" Value="34"/>
        <Setter Property="Height" Value="40"/>
        <Setter Property="Foreground" Value="#000100"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
    </Style>
    <Style x:Key="HmscreenSubLabel" TargetType="{x:Type Label}">
        <Setter Property="FontSize" Value="15"/>
        <Setter Property="Height" Value="20"/>
        <Setter Property="Foreground" Value="#7a7a7a"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
    </Style>
</ResourceDictionary>